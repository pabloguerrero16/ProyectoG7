@model List<WebProyecto.Entities.FacturasEnt>


@{
    ViewBag.Title = "ConsultarFacturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información de tus compras</h4>

            @if (ViewBag.MensajeUsuario != null)
            {
                <div class="alert alert-info" role="alert" style="text-align:center">
                    @ViewBag.MensajeUsuario
                </div>
            }

            <br>

            @if (Model.Count() > 0)
            {

                <table id="tableData" class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="color: white"># Factura</th>
                            <th style="color: white">Total Factura</th>
                            <th style="color: white">Fecha Factura</th>
                            <th style="color: white">Ver Detalle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="text-align:center">
                                <td># @item.ConMaestro</td>
                                <td>$@item.TotalFactura.ToString("N2")</td>
                                <td>@item.FechaCompra</td>

                                <td style="text-align:center">
                                    <a href="@Url.Action("ConsultarDetalleFactura", "Carrito", new { q = item.ConMaestro })" class="btn btn-inverse-info btn-fw">Detalle</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="alert alert-info col-12" role="alert" style="text-align:center; margin-top:5%; font-size:18pt;">
                    No haz realizado ninguna compra con nosotros
                </div>
            }

        </div>
    </div>
</div>

