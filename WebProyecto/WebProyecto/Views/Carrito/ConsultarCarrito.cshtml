@model List<WebProyecto.Entities.CarritoEnt>

@{
    ViewBag.Title = "ConsultarProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Informacion del Carrito</h4>
            @if (ViewBag.MensajeUsuario != null)
            {
                <div class="alert alert-info" role="alert" style="text-align:center">
                    @ViewBag.MensajeUsuario
                </div>
            }
            <br>

            @if (Model.Count() > 0)
            {
                <div class="table-responsive">
                    <table id="tableData" class="table table-dark">
                        <thead>
                            <tr>
                                <th style="color: white"> Nombre </th>
                                <th style="color: white"> Cantidad </th>
                                <th style="color: white"> Precio Unitario </th>
                                <th style="color: white"> Sub Total </th>
                                <th style="color: white"> Impuesto </th>
                                <th style="color: white"> Total </th>
                                <th style="color: white"> Eliminar </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="color: white"> @item.Nombre </td>
                                    <td style="color: white"> @item.Cantidad </td>
                                    <td style="color: white"> @item.Precio.ToString("N2") </td>
                                    <td style="color: white"> @item.SubTotal.ToString("N2") </td>
                                    <td style="color: white"> @item.Impuesto.ToString("N2") </td>
                                    <td style="color: white"> @item.Total.ToString("N2") </td>

                                    <td style="text-align:center">
                                        <a href="@Url.Action("ActualizarProducto", "Producto", new { q = item.ConProducto })" class="btn btn-danger btn-fw">
                                            <i class="mdi mdi-delete"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <p class="font-weight-bold text-center">El monto total a pagar es de: @decimal.Parse(Session["Total"].ToString()).ToString("N2")</p>
                    </div>
                    <div class="col-md-6">
                        @using (Html.BeginForm("PagarCarrito", "Carrito", FormMethod.Post))
                        {
                            <button type="submit" class="btn btn-primary btn-block">Pagar</button>
                        }
                    </div>
                </div>

            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <h5>Error</h5>
                        <div class="row">
                            <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                <div class="d-flex d-sm-block d-md-flex align-items-center">
                                    <h2 class="mb-0">No hay ningún vehículo registrado</h2>
                                </div>
                                <h6 class="text-muted font-weight-normal"></h6>
                            </div>
                            <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                <i class="icon-lg mdi mdi-close-box-outline text-primary ml-auto"></i>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
