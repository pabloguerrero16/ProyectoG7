<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Grupo Volkswagen</title>
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/template/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/template/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End Plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/template/css/extra.css">
    <link rel="stylesheet" href="~/template/css/style.css">


    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/template/images/favicon.png">

</head>
<body class="">
    <div class="container-scroller">
        <!-- partial:../../partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo" href="@Url.Action("Index","Login")"><img src="~/template/images/logo-volk.png" style="object-fit:contain; width:fit-content; height: auto" alt="logo"></a>
                <a class="sidebar-brand brand-logo-mini" href="@Url.Action("Index","Login")"><img src="~/template/images/logo-volk-mini.png" style="object-fit: contain; width: fit-content; height: auto" alt="logo"></a>
            </div>
            <ul class="nav">

                <li class="nav-item nav-category">
                    <span class="nav-link">Navegación</span>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("ListarProductos","Producto")">
                        <span class="menu-icon">
                            <i class="mdi mdi-store"></i>
                        </span>
                        <span class="menu-title">Tienda Principal</span>
                    </a>
                </li>


                <li class="nav-item menu-items">
                    @if (Session["ConUsuario"] != null)
                    {

                    <li class="nav-item menu-items">
                        <a class="nav-link" href="@Url.Action("PerfilUsuario","Usuario")">
                            <span class="menu-icon">
                                <i class="mdi mdi-account"></i>
                            </span>
                            <span class="menu-title">Mi Perfil</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item menu-items">
                        <a class="nav-link" href="@Url.Action("RegistrarCuenta","Login")">
                            <span class="menu-icon">
                                <i class="mdi mdi-account-plus"></i>
                            </span>
                            <span class="menu-title">Crear Cuenta</span>
                        </a>
                    </li>

                }

                    <li class="nav-item nav-category">
                        <span class="nav-link">Explora</span>
                    </li>

                    <li class="nav-item menu-items">
                        <a class="nav-link " data-toggle="collapse" href="#ui-basic" aria-expanded="true" aria-controls="ui-basic">
                            <span class="menu-icon">
                                <i class="mdi mdi-laptop"></i>
                            </span>
                            <span class="menu-title">Modelos</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse show" id="ui-basic" style="">
                            <ul class="nav flex-column sub-menu">
                                @foreach (var modelo in ViewBag.Modelos)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("FiltrarModelos","Producto", new {q = modelo.Value})">
                                            @modelo.Text
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item menu-items">
                        <a class="nav-link collapsed" data-toggle="collapse" href="#ui-basic" aria-expanded="true" aria-controls="ui-basic">
                            <span class="menu-icon">
                                <i class="mdi mdi-laptop"></i>
                            </span>
                            <span class="menu-title">Categorías</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse show" id="ui-basic" style="">
                            <ul class="nav flex-column sub-menu">
                                @foreach (var categoria in ViewBag.Categorias)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("FiltrarCategorias","Producto", new {q = categoria.Value})">
                                            @categoria.Text
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item menu-items">
                        <a class="nav-link collapsed" data-toggle="collapse" href="#ui-basic" aria-expanded="true" aria-controls="ui-basic">
                            <span class="menu-icon">
                                <i class="mdi mdi-laptop"></i>
                            </span>
                            <span class="menu-title">Marcas</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse show" id="ui-basic" style="">
                            <ul class="nav flex-column sub-menu">
                                @foreach (var marca in ViewBag.Marcas)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("FiltrarMarca","Producto", new {q = marca.Value})">
                                            @marca.Text
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>


                    @if ((string)Session["Rol"] == "ADMIN")
                    {
                        <li class="nav-item nav-category">
                            <span class="nav-link">Administrador</span>
                        </li>
                        <li class="nav-item menu-items">
                            <a class="nav-link" href="@Url.Action("ConsultaUsuarios","Usuario")">
                                <span class="menu-icon">
                                    <i class="mdi mdi-account-multiple"></i>
                                </span>
                                <span class="menu-title">Administrar Usuarios</span>
                            </a>
                        </li>

                        <li class="nav-item menu-items">
                            <a class="nav-link" href="@Url.Action("ConsultarProductos","Producto")">
                                <span class="menu-icon">
                                    <i class="mdi mdi-car"></i>
                                </span>
                                <span class="menu-title">Amdministrar Vehículos</span>
                            </a>
                        </li>
                    }




                </ul>
            </nav>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">
                <!-- partial:../../partials/_navbar.html -->
                <nav class="navbar p-0 fixed-top d-flex flex-row">
                    <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                        <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index","Login")"><img src="~/template/images/logo-volk-mini.png" alt="logo"></a>
                    </div>
                    <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                            <span class="mdi mdi-menu"></span>
                        </button>
                        <ul class="navbar-nav w-100">
                            <li class="nav-item w-100">
                                <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                                    <input type="text" class="form-control" placeholder="Buscar...">
                                </form>
                            </li>
                        </ul>
                        <ul class="navbar-nav navbar-nav-right">


                            <li class="nav-item dropdown">
                                <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
                                    <div class="navbar-profile">
                                        <img class="img-xs rounded-circle" src="~/template/images/faces/face15.jpg" alt="">
                                        @if (Session["ConUsuario"] != null)
                                        {
                                            <p class="mb-0 d-none d-sm-block navbar-profile-name">@Session["Nombre"]</p>
                                        }

                                        <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                    <h6 class="p-3 mb-0">Perfil</h6>
                                    <div class="dropdown-divider"></div>

                                    @if (Session["ConUsuario"] != null)
                                    {
                                        <a class="dropdown-item preview-item" href="@Url.Action("PerfilUsuario","Usuario")">
                                            <div class="preview-thumbnail">
                                                <div class="preview-icon bg-dark rounded-circle">
                                                    <i class="mdi mdi-account"></i>
                                                </div>
                                            </div>
                                            <div class="preview-item-content">
                                                <p class="preview-subject mb-1">Administrar Perfil</p>
                                            </div>
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item preview-item" href="@Url.Action("CerrarSesion","Login")">
                                            <div class="preview-thumbnail">
                                                <div class="preview-icon bg-dark rounded-circle">
                                                    <i class="mdi mdi-logout text-danger"></i>
                                                </div>
                                            </div>
                                            <div class="preview-item-content">
                                                <p class="preview-subject mb-1">Cerrar Sesión</p>
                                            </div>
                                        </a>
                                    }


                                    @if (Session["ConUsuario"] == null)
                                    {
                                        <a class="dropdown-item preview-item" href="@Url.Action("IniciarSesion","Login")">
                                            <div class="preview-thumbnail">
                                                <div class="preview-icon bg-dark rounded-circle">
                                                    <i class="mdi mdi-login"></i>
                                                </div>
                                            </div>
                                            <div class="preview-item-content">
                                                <p class="preview-subject mb-1">Iniciar Sesión</p>
                                            </div>
                                        </a>
                                    }

                                    <div class="dropdown-divider"></div>

                                    <div class="dropdown-divider"></div>
                                    @if ((string)Session["Rol"] == "ADMIN")
                                    {
                                        <p class="p-3 mb-0 text-center">Usuario Administrador</p>
                                    }

                                </div>
                            </li>
                        </ul>
                        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                            <span class="mdi mdi-format-line-spacing"></span>
                        </button>
                    </div>
                </nav>
                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        @RenderBody()
                    </div>
                    <!-- content-wrapper ends -->
                    <!-- partial:../../partials/_footer.html -->
                    <!-- partial -->
                </div>
                <!-- main-panel ends -->
            </div>
            <!-- page-body-wrapper ends -->
        </div>
        <!-- container-scroller -->
        <!-- plugins:js -->
        <script src="~/template/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script src="~/template/js/off-canvas.js"></script>
        <script src="~/template/js/hoverable-collapse.js"></script>
        <script src="~/template/js/misc.js"></script>
        <script src="~/template/js/settings.js"></script>
        <script src="~/template/js/todolist.js"></script>
        <script src="~/funciones/Registro.js"></script>
        <!-- endinject -->
        <!-- Custom js for this page -->
        <!-- End custom js for this page -->
        <script src="https://code.jquery.com/jquery-3.7.0.js"></script> 
        <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    </body>
</html>