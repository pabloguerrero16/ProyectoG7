@model List<WebProyecto.Entities.ProductoEnt>

@{
    ViewBag.Title = "ConsultarProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Productos Registrados</h4>

            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th style="color: white"> Código </th>
                            <th style="color: white"> Descripción </th>
                            <th style="color: white"> Modelo </th>
                            <th style="color: white"> Marca </th>
                            <th style="color: white"> Tipo </th>
                            <th style="color: white"> Precio </th>
                            <th style="color: white"> Stock </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="color: white"> @item.ConProducto </td>
                                <td style="color: white"> @item.Nombre </td>
                                <td style="color: white"> @item.DescripcionModelo </td>
                                <td style="color: white"> @item.DescripcionMarca </td>
                                <td style="color: white"> @item.DescripcionCategoria </td>
                                <td style="color: white"> @item.Precio </td>
                                <td style="color: white"> @item.Stock </td>

                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

