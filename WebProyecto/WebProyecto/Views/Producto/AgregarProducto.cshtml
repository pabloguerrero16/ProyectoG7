﻿@model WebProyecto.Entities.ProductoEnt

@{
    ViewBag.Title = "AgregarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mi Perfil</h4>
            @if (ViewBag.MensajeUsuario != null)
            {
                <div class="alert alert-info" role="alert" style="text-align:center">
                    @ViewBag.MensajeUsuario
                </div>
            }

            @using (Html.BeginForm("AgregarProducto", "Producto", FormMethod.Post, new { @class = "form-group", @enctype = "multipart/form-data" }))
            {

                <div class="form-group">
                    <label for="exampleInputName1">Modelo</label>
                    @Html.DropDownListFor(m => m.ConModelo, (List<SelectListItem>)ViewBag.Modelos, new { @class = "form-control form-control-lg", @placeholder = "Modelo", style = "color: white;" })
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Marca</label>
                    @Html.DropDownListFor(m => m.ConMarca, (List<SelectListItem>)ViewBag.Marcas, new { @class = "form-control form-control-lg", @placeholder = "Marca", style = "color: white;" })
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Categoría</label>
                    @Html.DropDownListFor(m => m.ConCategoria, (List<SelectListItem>)ViewBag.Categorias, new { @class = "form-control form-control-lg", @placeholder = "Categoría", style = "color: white;" })
                </div>


                <div class="form-group">
                    <label for="exampleInputPassword4">Precio</label>
                    @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", @type = "text", @placeholder = "Precio en dólares", style = "color: white;" })
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Stock</label>
                    @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", @type = "text", @placeholder = "Stock", style = "color: white;" })
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Año</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @type = "text", @placeholder = "Año", style = "color: white;" })
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Imagen</label>
                    <input type="file" id="ImgProducto" name="ImgProducto" class="form-control form-control-lg">
                </div>





                <button type="submit" class="btn btn-primary mr-2">Agregar</button>
                <a href="@Url.Action("Index","Login")" class="btn btn-dark">Volver</a>
            }

        </div>
    </div>
</div>

