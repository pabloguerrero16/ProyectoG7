@model WebProyecto.Entities.ProductoEnt

@{
    ViewBag.Title = "DetalleProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card2" style="background-color: #191c24; color:white;">
        <div class="card-body">
            <h3 class="card-title">@Model.DescripcionMarca @Model.DescripcionModelo @Model.Nombre</h3>
            <h6 class="card-subtitle" style="margin-bottom: 10px;">@Model.DescripcionCategoria</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@Url.Content(Model.Imagen)" class="img-fluid" style="max-width: 100%; height: auto;"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Descripcion</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin hendrerit mauris eu lacinia pellentesque. Morbi tellus odio, venenatis ac tincidunt at, pretium sed ipsum. Vestibulum vulputate molestie viverra. Nam in velit id elit dapibus semper volutpat non magna. Ut ut mattis risus.</p>
                    <br>
                    <br>
                    <br>
                    <h2 class="mt-5">
                        $@Model.Precio<small class="text-success"></small>
                    </h2>
                    <br>
                    @if (Session["ConUsuario"] != null)
                    {
                        <div class="input-group">
                            <input type="number" class="form-control" id=prd-@Model.ConProducto min="1" max="@Model.Stock" style="width: 100px;">
                            <div class="input-group-append">
                                <a id="btnAgregarCarrito" class="btn btn-primary" onclick="AgregarCarrito(@Model.ConProducto,@Model.Stock)">
                                    Agregar al Carrito
                                </a>
                                <p id="mensajeStock" style="color: red;"></p> 
                            </div>
                        </div>
                    }

                    else
                    {
                        <a class="btn btn-primary btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart" style="width: 300px; height: 40px; text-align: center;" href="@Url.Action("IniciarSesion","Login")">Iniciar Sesión</a>
                    }

                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Información Adicional</h3>
                    <div class="table-responsive">
                        <table class="table table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Año</td>
                                    <td>@Model.Nombre</td>
                                </tr>
                                <tr>
                                    <td width="390">Marca</td>
                                    <td>@Model.DescripcionMarca</td>
                                </tr>
                                <tr>
                                    <td>Modelo</td>
                                    <td>@Model.DescripcionModelo</td>
                                </tr>
                                <tr>
                                    <td>Categoria</td>
                                    <td>@Model.DescripcionCategoria</td>
                                </tr>
                                <tr>
                                    <td>Precio</td>
                                    <td>$@Model.Precio</td>
                                </tr>
                                <tr>
                                    <td>Unidades en Inventario</td>
                                    <td>@Model.Stock</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var loginUrl = '@Url.Action("Index", "Login")';
</script>

