@model WebProyecto.Entities.UsuarioEnt

@{
    ViewBag.Title = "RegistrarCuenta";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="row w-100 m-0">
        <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-4 mx-auto">
                <div class="card-body px-5 py-5">
                    <h3 class="card-title text-left mb-3">Registrarse</h3>

                    @if (ViewBag.MensajeUsuario != null)
                    {
                        <div class="alert alert-info" role="alert" style="text-align:center">
                            @ViewBag.MensajeUsuario
                        </div>
                    }

                    @using (Html.BeginForm("RegistrarCuenta", "Login", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>Cédula</label>
                            @Html.TextBoxFor(m => m.Identificacion, new {@onkeyup = "ConsultarNombre()", @class = "form-control p_input", @type= "text", placeholder = "Identificación", required = "required", style = "color: white;" })
                        </div>
                        <div class="form-group">
                            <label>Nombre</label>
                            @Html.TextBoxFor(m => m.Nombre, new { @readonly = "@readonly", style = "background-color: #2A3038; color: white;", @class = "form-control p_input", @type = "text", placeholder = "Nombre", })
                        </div>
                        <div class="form-group">
                            <label>Correo Electrónico</label>
                            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control p_input", @type = "text", placeholder = "Correo Electrónico", required = "required", style = "color: white;" })
                            <span id="CorreoMsg"></span>
                        </div>
                        <div class="form-group">
                            <label>Contraseña</label>
                            @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control p_input", @type = "password", placeholder = "Contraseña", id="con1", required = "required", style = "color: white;" })
                        </div>
                        <div class="form-group">
                            <label>Confirmar Contraseña</label>
                            <input type="password" class="form-control p_input" placeholder="Contraseña" id="con2" style="color:white" required>
                            <span id="error"></span>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-block enter-btn" id="enviar">Registrarse</button>
                        </div>

                        <p class="sign-up">¿Ya tienes una cuenta?<a href="@Url.Action("IniciarSesion","Login")"> Inicia Sesión</a></p>
                        <p class="sign-up"><a href="@Url.Action("Index","Login")">Volver al inicio</a></p>
                    }
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- row ends -->
</div>

